<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhonglushu.charts.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF020D16"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite_60"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            android:text="@string/line_chart_title"/>

        <com.zhonglushu.charts.chart.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="287dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorWhite_60"
            android:textSize="20sp"
            android:text="@string/curve_chart_title"/>

        <com.zhonglushu.charts.chart.CurveChart
            android:id="@+id/curve_chart"
            android:layout_width="match_parent"
            android:layout_height="287dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorWhite_60"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            android:text="@string/page_bar_chart_title"/>

        <com.zhonglushu.charts.chart.BarChart
            android:id="@+id/page_bar_chart"
            android:layout_width="match_parent"
            android:layout_height="287dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorWhite_60"
            android:textSize="20sp"
            android:text="@string/scroll_bar_chart_title"/>

        <com.zhonglushu.charts.chart.BarChart
            android:id="@+id/default_bar_chart"
            android:layout_width="match_parent"
            android:layout_height="287dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" />

        <!--<com.zhonglushu.charts.chart.RadarGraph-->
            <!--android:id="@+id/radar_graph"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="287dp"-->
            <!--android:layout_marginLeft="40dp"-->
            <!--android:layout_marginRight="40dp"/>-->

    </LinearLayout>
</ScrollView>
